                            <ins class="adsbygoogle"
                                 style="display:block"
                                 data-ad-client="ca-pub-3916336310288272"
                                 data-ad-slot="8575973492"
                                 data-ad-format="auto"></ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>

                            {% block dropmenu %}
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-expanded="false">FPL Updates & Tips Exclusive </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('article_homepage',{'categorie':1}) }}">Captain Choice</a></li>
                                    <li><a href="{{ path('article_homepage',{'categorie':2}) }}">TOP 4 Players To
